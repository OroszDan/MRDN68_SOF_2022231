@model IEnumerable<MRDN68_SOF_2022231.Models.Workplace>

@{
    ViewData["Title"] = "ListWorkplaces";
}

<h1>List of Workplaces</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.OwnerId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CompanyName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.City)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.WorkedYears)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Role)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.OwnerId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CompanyName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.City)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.WorkedYears)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Role)
            </td>
            <td>
                <a asp-action="UpdateWorkplace" asp-route-id="@item.Id" class="btn btn-outline-primary">Update</a> 
                <a asp-action="DeleteWorkplace" asp-route-id="@item.Id" class="btn btn-outline-danger">Delete</a>
            </td>
        </tr>
}
    </tbody>
    <a asp-controller="Home" asp-action="AddWorkplace" asp-route-id="@Model.Select(x => x.OwnerId).First()" class="btn btn-outline-success">Add a Workplace</a>
   
</table>


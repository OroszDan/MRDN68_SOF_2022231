@model MRDN68_SOF_2022231.Models.Resume

@{
    ViewData["Title"] = "Create";
}

<h2>Create Resume</h2>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-control form-control-lg">
                <label asp-for="FirstName" class="control-label"></label>
                <input asp-for="FirstName" class="form-control" required maxlength="100"/>
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>
            <div class="form-control form-control-lg">
                <label asp-for="LastName" class="control-label"></label>
                <input asp-for="LastName" class="form-control" required maxlength="100" />
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>
            <div class="form-control form-control-lg">
                <label asp-for="Age" class="control-label"></label>
                <input asp-for="Age" class="form-control" required />
                <span asp-validation-for="Age" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <textarea asp-for="Description" class="form-control" rows="4" placeholder="Describe yourself" required></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create and Add Workplaces" class="btn btn-outline-primary btn-lg" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to Main Page </a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
